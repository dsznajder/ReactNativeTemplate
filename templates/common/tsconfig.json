{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "~/assets/*": ["src/assets/*"],
      "~/assets": ["src/assets"],
      "~/components/*": ["src/components/*"],
      "~/components": ["src/components"],
      "~/config/*": ["src/config/*"],
      "~/config": ["src/config"],
      "~/hooks/*": ["src/hooks/*"],
      "~/hooks": ["src/hooks"],
      "~/helpers/*": ["src/helpers/*"],
      "~/helpers": ["src/helpers"],
      "~/locales/*": ["src/locales/*"],
      "~/locales": ["src/locales"],
      "~/machines/*": ["src/machines/*"],
      "~/machines": ["src/machines"],
      "~/queries/*": ["src/queries/*"],
      "~/queries": ["src/queries"],
      "~/scenes/*": ["src/scenes/*"],
      "~/scenes": ["src/scenes"],
      "~/services/*": ["src/services/*"],
      "~/services": ["src/services"],
      "~/store/*": ["src/store/*"],
      "~/store": ["src/store"],
      "~/styles/*": ["src/styles/*"],
      "~/styles": ["src/styles"],
      <% if (modules.navigation) { %>
      "~/navigation/*": ["src/navigation/*"],
      "~/navigation": ["src/navigation"],
      "~/screens/*": ["src/screens/*"],
      "~/screens": ["src/screens"],
      <% } %>
      "~/types/*": ["src/types/*"],
      "~/types": ["src/types"]
    },
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "target": "esnext"
  },
  "exclude": ["node_modules", "e2e", "jest", "**/__tests__/*"],
  "compileOnSave": false
}
