{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "~/assets/*": ["src/assets/*"],
      "~/components/*": ["src/components/*"],
      "~/config/*": ["src/config/*"],
      "~/hooks/*": ["src/hooks/*"],
      "~/helpers/*": ["src/helpers/*"],
      "~/locales/*": ["src/locales/*"],
      "~/machines/*": ["src/machines/*"],
      <% if (modules.navigation) { %>
      "~/navigation/*": ["src/navigation/*"],  
      <% } %>
      "~/queries/*": ["src/queries/*"],
      "~/scenes/*": ["src/scenes/*"],
      "~/services/*": ["src/services/*"],
      "~/store/*": ["src/store/*"],
      "~/styles/*": ["src/styles/*"],
      <% if (modules.navigation) { %>
      "~/screens/*": ["src/screens/*"],  
      <% } %>
      "~/types/*": ["src/types/*"]
    },
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "target": "esnext"
  },
  "exclude": ["node_modules", "e2e", "jest", "**/__tests__/*"],
  "compileOnSave": false
}
