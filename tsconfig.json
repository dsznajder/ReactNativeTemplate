{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "~/assets/*": ["src/assets/*"],
      "~/components/*": ["src/components/*"],
      "~/config/*": ["src/config/*"],
      "~/hooks/*": ["src/hooks/*"],
      "~/helpers/*": ["src/helpers/*"],
      "~/locales/*": ["src/locales/*"],
      "~/machines/*": ["src/machines/*"],
      "~/queries/*": ["src/queries/*"],
      "~/scenes/*": ["src/scenes/*"],
      "~/services/*": ["src/services/*"],
      "~/store/*": ["src/store/*"],
      "~/styles/*": ["src/styles/*"],
      "~/types/*": ["src/types/*"]
    },
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "target": "esnext"
  },
  "exclude": [
    "node_modules",
    "templates",
    "lib",
    "e2e",
    "jest",
    "**/__tests__/*",
    "DevProject"
  ],
  "compileOnSave": false
}
